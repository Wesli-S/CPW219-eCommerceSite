@model CPW219_eCommerceSite.Models.MenuItem

@{
    ViewData["Title"] = "Create a new Menu Item";
}

@if (ViewData["Message"] != null)
{

    <div class="alert alert-success">
        @ViewData["Message"]
    </div>
}
else
{
    <h1>Create a new Menu Item</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MenuItemName" class="control-label"> Menu Item </label>
                    <input asp-for="MenuItemName" class="form-control" />
                    <span asp-validation-for="MenuItemName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MenuItemPrice" class="control-label"> Price </label>
                    <input asp-for="MenuItemPrice" class="form-control" />
                    <span asp-validation-for="MenuItemPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
