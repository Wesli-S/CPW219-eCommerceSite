@model IEnumerable<CartItemViewModel>

@{
    ViewData["Title"] = "View Shopping Cart";
}

<h1>Your Cart</h1>

@if(Model.Count() == 0)
{
    <h2>Nothing here yet!</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemPrice)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemPrice)
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.ItemId">Remove Item</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
